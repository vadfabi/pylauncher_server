<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.littlebytesofpi.pylauncherfree"
    android:versionCode="4"
    android:versionName="1.0.8" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Redactionbar" android:debuggable="false">
        <service android:name="com.littlebytesofpi.pylauncherfree.PyLauncherService" >
        </service>

        <activity
            android:name="com.littlebytesofpi.pylauncherfree.PyLauncher"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.littlebytesofpi.pylauncherfree.SendTab"
            android:label="@string/title_activity_send_tab"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.littlebytesofpi.pylauncherfree.ConnectTab"
            android:label="@string/title_activity_connect_tab"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.littlebytesofpi.pylauncherfree.DirectoryTab"
            android:label="@string/title_activity_directory_tab"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.littlebytesofpi.pylauncherfree.Support"
            android:label="@string/title_activity_support" >
        </activity>
    </application>

</manifest>
