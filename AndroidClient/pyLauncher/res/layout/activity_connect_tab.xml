<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ConnectTab" >

    <TextView
        android:id="@+id/textView_ServerStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_NetworkStatus"
        android:layout_below="@+id/textView_NetworkStatus"
        android:layout_marginTop="5dp"
        android:text="Server Status" />

    <EditText
        android:id="@+id/editText_Port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_PortTag"
        android:layout_below="@+id/textView_PortTag"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView_NetworkStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Network Status" />

    <TextView
        android:id="@+id/textView_IpAddressTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_ServerStatus"
        android:layout_below="@+id/textView_ServerStatus"
        android:layout_marginTop="5dp"
        android:text="IP Address of Server:" />

    <EditText
        android:id="@+id/editText_IpAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_IpAddressTag"
        android:layout_below="@+id/textView_IpAddressTag"
        android:layout_marginTop="5dp"
        android:ems="10" 
        android:inputType="phone"/>

    <TextView
        android:id="@+id/textView_PortTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_IpAddress"
        android:layout_below="@+id/editText_IpAddress"
        android:layout_marginTop="10dp"
        android:text="Server Listening on Port:" />

    <Button
        android:id="@+id/buttonConnect"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_Port"
        android:layout_alignParentBottom="true"
        android:text="Connect" />

    <Button
        android:id="@+id/buttonDisconnect"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonConnect"
        android:layout_alignBottom="@+id/buttonConnect"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:text="Disconnect" />

</RelativeLayout>
