<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <CheckBox android:id="@+id/checkBoxFileSelect" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentTop="true" android:layout_marginRight="15dp" android:layout_weight="0.00"/>
    <CheckBox android:id="@+id/checkBoxFileSelect" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_below="@+id/checkBoxFileSelect" android:layout_marginRight="15dp" android:layout_weight="0.00"/>

    <TextView
        android:id="@+id/textViewFileName"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/checkBoxFileSelect"
        android:layout_alignParentLeft="true"
        android:layout_weight="0.06"
        android:text="TextView" />

</RelativeLayout>