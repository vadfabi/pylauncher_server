<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SendTab" >

    <ListView
        android:id="@+id/listViewEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editTextArgs" >

    </ListView>

    <TextView
        android:id="@+id/textViewInstructions"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/buttonRunFile"
        android:text="Select a Python file to run:" />

    <Spinner
        android:id="@+id/spinnerFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listViewEvents"
        android:layout_below="@+id/textViewInstructions"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@+id/buttonRunFile" />

    <EditText
        android:id="@+id/editTextArgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listViewEvents"
        android:layout_alignRight="@+id/listViewEvents"
        android:layout_below="@+id/textViewCmdLineTag"
        android:ems="10" 
        />

    <TextView
        android:id="@+id/textViewCmdLineTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextArgs"
        android:layout_below="@+id/spinnerFile"
        android:layout_marginTop="3dp"
        android:text="Additional Arguments:" />

    <Button
        android:id="@+id/buttonRunFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinnerFile"
        android:layout_alignParentRight="true"
        android:text="Run" />

</RelativeLayout>
