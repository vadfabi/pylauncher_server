<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ListView
        android:id="@+id/listViewEvents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/textViewSaveButton"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editTextArgs"
        android:divider="#660000"
        android:dividerHeight="2px" >
    </ListView>

    <Spinner
        android:id="@+id/spinnerFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listViewEvents"
        android:layout_below="@+id/textViewInstructions"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@+id/buttonRunFile" />

    <EditText
        android:id="@+id/editTextArgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listViewEvents"
        android:layout_alignRight="@+id/listViewEvents"
        android:layout_below="@+id/textViewCmdLineTag"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewCmdLineTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextArgs"
        android:layout_below="@+id/spinnerFile"
        android:layout_marginTop="5dp"
        android:text="Additional Arguments:" />

    <Button
        android:id="@+id/buttonRunFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinnerFile"
        android:layout_alignRight="@+id/editTextArgs"
        android:text="Run" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/buttonRunFile"
        android:layout_marginLeft="20dp"
        android:gravity="right"
        android:text="Not connected. Please tap settings." />

    <TextView
        android:id="@+id/textViewSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Support Us"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewInstructions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerFile"
        android:layout_below="@+id/textViewStatus"
        android:layout_marginTop="10dp"
        android:text="Select a Python file to run:" />

</RelativeLayout>